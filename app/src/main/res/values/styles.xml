<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/appBarToggle</item>
        <item name="android:actionOverflowButtonStyle">@style/toolTheme</item>
    </style>

    <style name="appBarToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/holo_green_dark</item>
    </style>

    <style name="toolTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/holo_green_dark</item>
    </style>

</resources>
