<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardShowing"
    android:layout_width="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/back"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_back"
            >
            <ImageView
                android:id="@+id/imgNow"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/titleShowing"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/the_secret_garden"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunitobold"
                android:textSize="14sp"
                />
            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleShowing"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_star_black_24dp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_star_black_24dp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_star_black_24dp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_star_black_24dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleShowing"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/val_now"
                android:layout_toRightOf="@id/lin"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunitobold"

                />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>